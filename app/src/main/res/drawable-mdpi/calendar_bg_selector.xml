<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:state_range_middle="true">
        <color android:color="@color/calendar_selected_range_bg" />
    </item>
    <item android:state_selected="true" app:state_today="true">
        <layer-list>
            <item android:drawable="@color/calendar_active_month_bg" />
            <item android:drawable="@drawable/calendar_bg_selected"
                android:right="@dimen/calendar_selected_padding"
                android:left="@dimen/calendar_selected_padding"
                android:bottom="@dimen/calendar_selected_padding"
                android:top="@dimen/calendar_selected_padding"/>
            <item android:drawable="@drawable/calendar_bg_today" />
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:drawable="@color/calendar_active_month_bg"/>
            <item android:drawable="@drawable/calendar_bg_selected"
                android:right="@dimen/calendar_selected_padding"
                android:left="@dimen/calendar_selected_padding"
                android:bottom="@dimen/calendar_selected_padding"
                android:top="@dimen/calendar_selected_padding" />
        </layer-list>
    </item>
    <item app:state_today="true">
        <layer-list>
            <item android:drawable="@color/calendar_active_month_bg" />
            <item android:drawable="@drawable/calendar_bg_today" />
        </layer-list>
    </item>
    <item app:state_current_month="false">
        <color android:color="@color/calendar_inactive_month_bg" />
    </item>
    <item app:state_highlighted="true">
        <color android:color="@color/calendar_highlighted_day_bg" />
    </item>

    <item>
        <color android:color="@color/calendar_active_month_bg" />
    </item>
</selector>
