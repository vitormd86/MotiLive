<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- Text Styles-->
    <style name="TextAlert">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_blankSpace</item>
        <item name="android:paddingRight">@dimen/margin_app</item>
        <item name="android:textSize">@dimen/textSize_medium</item>
        <item name="android:textColor">@color/Blue</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextTitle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_big</item>
        <item name="android:textColor">@color/lightBlack</item>
    </style>
    <style name="ServiceDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">7</item>
        <item name="android:lines">7</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>

    </style>
    <!-- Buttons Styles -->
    <style name="ButtonBig">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LoginButton" parent="ButtonBig">
        <item name="android:background">@drawable/button_rounded_borders_1</item>
    </style>
    <style name="SignUpButton" parent="ButtonBig">
        <item name="android:background">@drawable/button_rounded_borders_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="PlusButtom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_app</item>
        <item name="android:background">@drawable/button_floating_shadow</item>
        <item name="android:src">@drawable/button_floating_plus</item>
    </style>

    <!-- Image Styles -->
    <style name="ImagePhoto">
        <item name="android:layout_width">@dimen/img_photo</item>
        <item name="android:layout_height">@dimen/img_photo</item>
        <item name="android:layout_marginTop">@dimen/margin_photo</item>
        <item name="android:layout_marginBottom">@dimen/margin_photo</item>
        <item name="android:layout_marginRight">@dimen/margin_photo</item>
        <!--<item name="android:src">@drawable/button_photo</item>  VERIFICAR PROBLEMA DE INFLATING EM OUTROS DEVICES-->
        <item name="android:background">@drawable/img_photo_default</item>
        <item name="android:scaleType">fitCenter</item>
    </style>



    <!-- Calendar Styles-->
    <style name="CalendarTitle">
        <item name="android:textSize">@dimen/calendar_text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="CalendarCell.DayHeader">
        <item name="android:textSize">@dimen/calendar_text_small</item>
    </style>

    <style name="CalendarCell.CalendarDate">
        <item name="android:textSize">@dimen/calendar_text_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
