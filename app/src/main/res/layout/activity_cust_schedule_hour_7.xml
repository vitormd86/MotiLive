<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/hide" />
    <TextView
        android:id="@+id/professionalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:paddingLeft="15dp"
        android:paddingTop="7dp"
        android:textSize="15sp"
        android:text="Nome do Profissional"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:paddingTop="19dp"
        android:paddingLeft="15dp"
        android:textSize="15sp"
        android:text="ProfissÃ£o"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:paddingTop="31dp"
        android:paddingLeft="15dp"
        android:textSize="15sp"
        android:text="Data"
        android:textStyle="bold"/>


    <ListView
        android:id="@+id/listMinutes"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="5sp"
        android:layout_below="@id/photo"
        android:layout_alignParentRight="true"
        android:background="#0088dd"
        android:choiceMode="singleChoice"
      />
    <!-- esta lista vai mostrar as minutos livres do profissional-->
    <ListView
        android:id="@+id/listHours"
        android:layout_height="fill_parent"
        android:layout_marginTop="5sp"
        android:layout_width="0dp"
        android:layout_below="@id/photo"
        android:background="#440011"
        android:choiceMode="singleChoice"
        android:layout_toLeftOf="@id/listMinutes"
        />
        <!-- esta lista vai mostrar as horas livres do profissional-->
    <ListView
        android:id="@+id/listServices"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_below="@id/photo"
        android:layout_toLeftOf="@id/listHours"
        android:choiceMode="multipleChoice"
        />
    <!-- esta lista vai mostrar os servicos prestados pelo profissional-->
</RelativeLayout>

