<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGray"
    android:paddingTop="@dimen/margin_betweenElements_extraSmall"
    android:paddingBottom="@dimen/margin_betweenElements_extraSmall"
    android:paddingRight="@dimen/margin_app"
    android:paddingLeft="@dimen/margin_app"

    android:orientation="horizontal">

    <TextView
        android:id="@+id/textScheduleDayAndMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pink" />

    <TextView
        android:id="@+id/textScheduleDayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pink" />
</LinearLayout>