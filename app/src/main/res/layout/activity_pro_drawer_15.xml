<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:background="@color/themeGray"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_app"
            android:paddingLeft="@dimen/margin_app"
            android:background="@color/Gray">
            <!-- este trecho (RelativeLayout) organiza a visualizacao do titulo,
            ou seja, os dados do profissional-->
            <ImageView
                android:id="@+id/photoDrawer_pro15"
                style="@style/ImagePhoto"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/description_photo"/>
            <TextView
                android:id="@+id/name_pro15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photoDrawer_pro15"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_medium"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/occupation_pro15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_pro15"
                android:layout_marginBottom="@dimen/margin_betweenElements_small"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_small" />
            <ImageButton
                android:id="@+id/ic_editProfile_pro15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/name_pro15"
                android:layout_marginBottom="@dimen/margin_betweenElements_small"
                android:background="@color/transparent"
                android:contentDescription="@string/description_icEdit"
                android:src="@drawable/ic_button_edit" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/midNightBlue" />
        <ListView
            android:id="@+id/ListView_pro15"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="1dp"/>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>