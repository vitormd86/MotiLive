<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_app"
        android:paddingRight="@dimen/margin_app">

        <ImageView
            android:id="@+id/photo"
            style="@style/ImagePhoto" />
        <TextView
            android:id="@+id/textScheduleDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/photo"
            android:layout_alignTop="@id/photo"
            android:layout_marginTop="@dimen/margin_betweenElements_extraSmall"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_medium" />
        <TextView
            android:id="@+id/textScheduleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/photo"
            android:layout_alignBottom="@id/photo"
            android:layout_marginBottom="@dimen/margin_betweenElements_extraSmall"
            android:textSize="@dimen/textSize_medium" />
        <TextView
            android:id="@+id/textLeftTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/textScheduleDuration"
            android:textSize="@dimen/textSize_medium" />

    </RelativeLayout>

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray" />
</LinearLayout>